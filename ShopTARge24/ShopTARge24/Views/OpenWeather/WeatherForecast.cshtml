@model ShopTARge24.Models.OpenWeathers.OpenWeatherWeatherForecastViewModel

<div class="container">
    <h2>Foreacast for the selected city</h2>
    <hr />
    <dl class="row text-dark">
        <div>
            <dt class="col-sm-2">
                City:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Temperature:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Temp) °C
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Feels like:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.FeelsLike) °C
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Humidity:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Humidity) %
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Pressure:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Pressure) Hpa
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Wind Speed:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Speed) Km/h
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Weather Conditions:
            </dt>
            <dd class="col-sm-10 font-weight-bold">
                @Html.DisplayFor(model => model.Desctiption)
            </dd>
        </div>
    </dl>

    <div>
        <a asp-action="Index" asp-controller="OpenWeather" class="btn btn-success">Return</a>
    </div>
</div>