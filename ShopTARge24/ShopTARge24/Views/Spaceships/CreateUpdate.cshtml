@model ShopTARge24.Models.Spaceships.SpaceshipCreateUpdateViewModel

@if (Model.Id.HasValue)
{
	<h1>Update</h1>
}
else
{
	<h1>Create</h1>
}

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden" />
		<input asp-for="CreatedAt" type="hidden" />
		<input asp-for="ModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="spaceshipName" asp-for="Name" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Classification" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="spaceshipClass" asp-for="Classification" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="spaceshipBuiltDate" asp-for="BuiltDate" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Crew" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="spaceshipCrew" asp-for="Crew" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="spaceshipEngine" asp-for="EnginePower" class="form-control" />
			</div>
		</div>

		@if (Model.Id.HasValue)
		{
			<input id="updateCrtUpd" asp-action="update" asp-controller="spaceships" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input id="createCrtUpd" asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-success" value="Create" />
		}
		<a id="backToIndexCrtUpd" asp-action="Index" asp-controller="spaceships" class="btn btn-success">Back</a>
	</form>
</div>